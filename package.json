{
  "name": "books-catalog",
  "version": "1.0.0",
  "description": "Simple books catalog using Node.js, TypeScript, Nest.js, TypeORM, MySQL and GraphQL with code first approach",
  "author": "Vasyl Protsukovych",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "@nestjs/common": "7.0.9",
    "@nestjs/core": "7.0.9",
    "@nestjs/graphql": "6.6.0",
    "@nestjs/platform-express": "7.0.9",
    "@nestjs/typeorm": "7.0.0",
    "apollo-server-express": "2.13.0",
    "dataloader": "1.4.0",
    "graphql": "14.6.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tools": "5.0.0",
    "mysql": "2.18.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "type-graphql": "1.0.0-rc.1",
    "typeorm": "0.2.24",
    "voyager": "0.4.13"
  },
  "devDependencies": {
    "@nestjs/testing": "7.0.9",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.5",
    "@types/supertest": "2.0.9",
    "concurrently": "5.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.8.3",
    "wait-on": "5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
